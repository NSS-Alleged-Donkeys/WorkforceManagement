@model BangazonWorkforce.Models.ViewModels.DepartmentDetailViewModel

@{
    ViewData["Title"] = Html.DisplayFor(model => model.Departments.Name);
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Employees
        </dt>
        <dd>
            <ul>
                @foreach (var item in Model.Employees)
                {
                    <li>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Departments.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
