@* 
    *Author*: Madison Peper
    *Purpose*: Holds the HTML elements for the Index view for the Department Model/ViewModel
*@

@model BangazonWorkforce.Models.ViewModels.ViewAllDeptViewModel

@{
    ViewData["Title"] = "All Departments";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departments.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments.First().Budget)
            </th>
            <th>Total Employees</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Departments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalEmployees)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
