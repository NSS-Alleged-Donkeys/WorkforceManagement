@model BangazonWorkforce.Models.EmployeeDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Full Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Department
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt>
            Computer
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ComputerMake) by @Html.DisplayFor(model => model.ComputerManufacturer)
        </dd>
        <dt>
            Training Programs
        </dt>

        
        @foreach (var trainingProgram in Model.TrainingPrograms)
        {
            <dd>
                @Html.DisplayFor(modelTrainingProgram => trainingProgram.Name)
            </dd>
            <dd>
                Start Date: @Html.DisplayFor(modelTrainingProgram => trainingProgram.StartDate)

                End Date: @Html.DisplayFor(modelTrainingProgram => trainingProgram.EndDate)
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
